[flake8]
max-line-length = 88
max-complexity = 10
extend-ignore = 
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (conflicts with black)
    W503,
    # E501: line too long (handled by black)
    E501,
    # W291: trailing whitespace (handled by black)
    W291,
    # W293: trailing whitespace (handled by black)
    W293,
    # W292: trailing whitespace (handled by black)
    W292,
    # W294: trailing whitespace (handled by black)
    W294,
    # W295: trailing whitespace (handled by black)
    W295,
    # W296: trailing whitespace (handled by black)
    W296,
    # W297: trailing whitespace (handled by black)
    W297,
exclude = 
    .git,
    __pycache__,
    docs/source/conf.py,
    old,
    build,
    dist,
    *.egg-info,
    .venv,
    venv,
    .tox,
    .mypy_cache,
    .pytest_cache,
    migrations,
    Example_Projects,
    tests/fixtures,
    tests/unit/fixtures,
    tests/e2e/fixtures,
per-file-ignores =
    # __init__.py files can have unused imports
    __init__.py:F401
    # Tests can have longer lines and unused imports
    tests/*:E501,F401,F811
    # Setup files can have longer lines
    setup.py:E501
select = E,W,F,C 